  journal = {Journal of Cognitive Neuroscience},
  volume = {22},
  number = {4},
  pages = {613--625},
  year = {2010},
  note = {Demonstrates variability in human attention capacity, supporting the monograph’s argument that weakness-based tests are unreliable and exclusionary.}
}

@article{szegedy2014,
  author = {Szegedy, Christian and others},
  title = {Intriguing Properties of Neural Networks},
  journal = {arXiv preprint arXiv:1312.6199},
  year = {2014},
  note = {Showed that imperceptible perturbations can mislead AI, warning that reliance on human weaknesses for security is brittle. RSVP’s informational approach is robust to both human and AI variations.}
}

@book{ortega1935,
  author = {Ortega y Gasset, José},
  title = {Meditations on Quixote},
  year = {1935},
  publisher = {Norton},
  note = {Provides the philosophical backdrop: the self and its environment as inseparable. RSVP extends this to civic informational systems, treating contributions as meaningful only in their coherence with circumstance.}
}

@book{prigogine1984,
