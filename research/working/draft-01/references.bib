  title = {Order Out of Chaos: Man’s New Dialogue with Nature},
  year = {1984},
  publisher = {Bantam},
  note = {Introduced dissipative structures as models of order-through-entropy. RSVP builds on this tradition: entropy is not always destructive but must be balanced against coherence and density.}
}

@article{mayr1961,
  author = {Mayr, Ernst},
  title = {Cause and Effect in Biology},
